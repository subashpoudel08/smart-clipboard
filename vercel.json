{
  "version": 2,
  "builds": [
    {
      "src": "api/clipboard-supabase.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/clipboard/(.*)",
      "dest": "/api/clipboard-supabase.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 